<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="48dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/questionCard"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="48dp"
        app:cardBackgroundColor="#ECECEC"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardView3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtTitleQuestions2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/sf_med"
                android:text="Question"
                android:textColor="#A3A3A3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtCurrentQuestion3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_med"
                android:text="01"
                android:textColor="#A3A3A3"
                app:layout_constraintBottom_toBottomOf="@+id/txtTitleQuestions"
                app:layout_constraintStart_toEndOf="@+id/txtTitleQuestions2"
                app:layout_constraintTop_toTopOf="@+id/txtTitleQuestions2" />

            <TextView
                android:id="@+id/txtCurrentQuestion4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_med"
                android:text="of"
                android:textColor="#A3A3A3"
                app:layout_constraintBottom_toBottomOf="@+id/txtTitleQuestions"
                app:layout_constraintStart_toEndOf="@+id/txtCurrentQuestion3"
                app:layout_constraintTop_toTopOf="@+id/txtAmountQuestion2" />

            <TextView
                android:id="@+id/txtAmountQuestion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_med"
                android:text="50"
                android:textColor="#A3A3A3"
                app:layout_constraintBottom_toBottomOf="@+id/txtTitleQuestions"
                app:layout_constraintStart_toEndOf="@+id/txtCurrentQuestion4"
                app:layout_constraintTop_toTopOf="@+id/txtTitleQuestions2" />

            <ImageView
                android:id="@+id/questionsTik2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="3dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/txtTitleQuestions2"
                app:layout_constraintStart_toEndOf="@+id/txtAmountQuestion2"
                app:layout_constraintTop_toTopOf="@+id/txtTitleQuestions2"
                app:srcCompat="@drawable/questionmark"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/imgtips2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="16dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/txtCurrentQuestion4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtCurrentQuestion3"
                app:srcCompat="@drawable/hint" />

            <TextView
                android:id="@+id/txtQuestionInRow2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/sf_bold"
                android:text=" At social events, you rarely try to introduce yourself to new people and mostly talk to the ones you already know."
                android:textColor="#252525"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTitleQuestions2" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/valueCard"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="48dp"
        app:cardBackgroundColor="#FBFAEA"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>