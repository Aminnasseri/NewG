<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="470dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="@+id/guideline12">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtTitletipsQuestionRow"
                app:srcCompat="@drawable/idea" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="183dp" />

            <ImageView
                android:id="@+id/imgtips"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="16dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/questionsTik"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/questionsTik"
                app:srcCompat="@drawable/questionmark" />

            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginTop="24dp"
                android:background="#D8D8D8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardRange" />

            <TextView
                android:id="@+id/txtQuestionInRow"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/sf_bold"
                android:text=" At social events, you rarely try to introduce yourself to new people and mostly talk to the ones you already know."
                android:textColor="#252525"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTitleQuestions" />

            <TextView
                android:id="@+id/txtTitleQuestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/sf_med"
                android:text="Question"
                android:textColor="#A3A3A3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtTitletipsQuestionRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sf_med"
                android:text="Tip"
                android:textColor="#0081CD"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view7"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/txtTipsQuestion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/sf_med"
                android:text="Are you a person who procrastinate things regularly?"
                android:textAlignment="center"
                android:textColor="#3A3A3A"
                android:textSize="12sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTitletipsQuestionRow"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/txtCurrentQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/sf_med"
                android:text="01"
                android:textColor="#A3A3A3"
                app:layout_constraintBottom_toBottomOf="@+id/txtTitleQuestions"
                app:layout_constraintStart_toEndOf="@+id/txtTitleQuestions"
                app:layout_constraintTop_toTopOf="@+id/txtTitleQuestions" />

            <TextView
                android:id="@+id/txtCurrentQuestion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/sf_med"
                android:text="of"
                android:textColor="#A3A3A3"
                app:layout_constraintBottom_toBottomOf="@+id/txtTitleQuestions"
                app:layout_constraintStart_toEndOf="@+id/txtCurrentQuestion"
                app:layout_constraintTop_toTopOf="@+id/txtTitleQuestions" />

            <TextView
                android:id="@+id/txtAmountQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/sf_med"
                android:text="50"
                android:textColor="#A3A3A3"
                app:layout_constraintBottom_toBottomOf="@+id/txtTitleQuestions"
                app:layout_constraintStart_toEndOf="@+id/txtCurrentQuestion2"
                app:layout_constraintTop_toTopOf="@+id/txtTitleQuestions" />

            <ImageView
                android:id="@+id/questionsTik"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/txtAmountQuestion"
                app:layout_constraintStart_toEndOf="@+id/txtAmountQuestion"
                app:layout_constraintTop_toTopOf="@+id/txtAmountQuestion"
                app:srcCompat="@drawable/questionmark"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="20dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="20dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardRange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtQuestionInRow">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <RadioButton
                            android:id="@+id/radioButton_disagree_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#FB89A2"
                            android:scaleX="1.5"
                            android:scaleY="1.5" />

                        <RadioButton
                            android:id="@+id/radioButton_disagree1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#FDA8BA"
                            android:scaleX="1.2"
                            android:scaleY="1.2" />

                        <RadioButton
                            android:id="@+id/radioButton_middle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#D7D3FF" />

                        <RadioButton
                            android:id="@+id/radioButton_agree1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#75CAFF"
                            android:scaleX="1.2"
                            android:scaleY="1.2" />

                        <RadioButton
                            android:id="@+id/radioButton_agree2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#46B7FD"
                            android:scaleX="1.5"
                            android:scaleY="1.5" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/txtQuestionAgree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:fontFamily="@font/sf_bold"
                        android:text="Agree"
                        android:textColor="#B2B2B2"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/radioGroup"
                        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

                    <TextView
                        android:id="@+id/txtQuestionDisAgree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_bold"
                        android:text="Disagree"
                        android:textColor="#B2B2B2"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/txtQuestionAgree"
                        app:layout_constraintEnd_toEndOf="@+id/radioGroup"
                        app:layout_constraintTop_toTopOf="@+id/txtQuestionAgree" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="20dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:visibility="visible"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtQuestionInRow">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constrante"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioGroup
                        android:id="@+id/radioGroup2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <RadioButton
                            android:id="@+id/radioButtonFirstAAndB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#46B7FD"
                            android:fontFamily="@font/sf_med"
                            android:text="others' needs first"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/radioButtonSecondAAndB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#FB89A2"
                            android:fontFamily="@font/sf_med"
                            android:text="my own needs firs"

                            android:textSize="18sp" />
                    </RadioGroup>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="20dp" />

            <ImageView
                android:id="@+id/shapeCircle"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view7"
                app:srcCompat="@drawable/leftcircle" />

            <ImageView
                android:id="@+id/shapeGreen"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/bottomgreen" />

            <ImageView
                android:id="@+id/shapeBlue"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view7"
                app:srcCompat="@drawable/rightblue" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="362dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="586dp" />

</androidx.constraintlayout.widget.ConstraintLayout>