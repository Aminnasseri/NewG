<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanPlateActivity">


    <TextView
        android:id="@+id/textView19s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sf_compact_rounded_light"
        android:text="@string/step_5"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView16" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/sf_compact_rounded_bold"
        android:text="Press send button to receive test result."
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19s" />

    <include
        android:id="@+id/toolbarScanPlate"
        layout="@layout/toolbar_open_kit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarScanPlate"
        app:srcCompat="@drawable/stepper_simple_scan_plate" />

    <ImageView
        android:id="@+id/currectImage"
        android:layout_width="47dp"
        android:layout_height="218dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgTest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgTest"
        app:srcCompat="@drawable/correct" />

    <ImageView
        android:id="@+id/incorrectImage"
        android:layout_width="48dp"
        android:layout_height="218dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgTest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgTest"
        app:srcCompat="@drawable/incorrect" />

    <Button
        android:id="@+id/btn_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/sf_compact_rounded_bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Send"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:cornerRadius="22dp"
        app:iconTint="#FFFFFF"
        app:iconTintMode="add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/retryCapture"
        android:layout_width="66dp"
        android:layout_height="19.2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_server"
        app:layout_constraintEnd_toEndOf="@+id/imgTest"
        app:layout_constraintStart_toStartOf="@+id/imgTest"
        app:layout_constraintTop_toBottomOf="@+id/imgTest"
        app:srcCompat="@drawable/retry_photo" />

    <ProgressBar
        android:id="@+id/progressBarSend"
        style="?android:attr/progressBarStyle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_server"
        app:layout_constraintStart_toStartOf="@+id/btn_server"
        app:layout_constraintTop_toBottomOf="@+id/btn_server" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="138dp"
        android:layout_height="321dp"
        app:layout_constraintBottom_toBottomOf="@+id/currectImage"
        app:layout_constraintEnd_toStartOf="@+id/currectImage"
        app:layout_constraintStart_toEndOf="@+id/incorrectImage"
        app:layout_constraintTop_toTopOf="@+id/currectImage"
        app:srcCompat="@drawable/rectangle_2" />

    <ImageView
        android:id="@+id/imgTest"
        android:layout_width="120dp"
        android:layout_height="300dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/covid_in_btn"
        app:layout_constraintBottom_toTopOf="@+id/retryCapture"
        app:layout_constraintEnd_toStartOf="@+id/currectImage"
        app:layout_constraintStart_toEndOf="@+id/incorrectImage"

        app:layout_constraintTop_toBottomOf="@+id/textView23" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="435dp" />
    <!--        i change that from app srcCompat to this-->


</androidx.constraintlayout.widget.ConstraintLayout>